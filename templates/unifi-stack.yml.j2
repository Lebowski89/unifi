version: '3.9'

services:
  {{ unifi_db_defaults_name }}:
    container_name: {{ unifi_db_defaults_name }}
    image: {{ unifi_db_defaults_image_repo }}:{{ unifi_db_defaults_image_tag }}
    networks:
      - {{ network_overlay }}
    environment:
      TZ: '{{ timezone }}'
      MONGO_INITDB_ROOT_USERNAME: 'root'
      MONGO_INITDB_ROOT_PASSWORD: /run/secrets/unifi_mongo_root_pass
      MONGO_USER: /run/secrets/unifi_mongo_user
      MONGO_PASS: /run/secrets/unifi_mongo_pass
      MONGO_DBNAME: '{{ unifi_db_defaults_db }}'
      MONGO_AUTHSOURCE: 'admin'
    ports:
      - target: {{ unifi_db_defaults_ports_cont }}
        published: {{ unifi_db_defaults_ports_host }}
        protocol: tcp
        mode: ingress
    volumes:
      - type: bind
        source: {{ unifi_db_defaults_location }}/init-mongo.sh
        target: /docker-entrypoint-initdb.d/init-mongo.sh
        read_only: true
      - type: bind
        source: {{ unifi_db_defaults_location }}
        target: /data/db
    user: {{ puid }}:{{ pgid }}
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.labels.ansible_host == pvr]

  {{ unifi_defaults_name }}:
    container_name: {{ unifi_defaults_name }}    
    image: {{ unifi_defaults_image_repo }}:{{ unifi_defaults_image_tag }}
    networks:
      - {{ network_overlay }}
    environment:
      PUID: '{{ puid }}'
      PGID: '{{ pgid }}'
      TZ: '{{ timezone }}'
      MONGO_DBNAME: '{{ unifi_db_defaults_db }}'
      MONGO_HOST: '{{ unifi_db_defaults_name }}'
      MONGO_USER: /run/secrets/unifi_mongo_user
      MONGO_PASS: /run/secrets/unifi_mongo_pass
      MONGO_PORT: '{{ unifi_db_defaults_ports_cont }}'
      MONGO_AUTHSOURCE: 'admin'
      MEM_LIMIT: '1024'
      MEM_STARTUP: '1024'
    ports:
      - target: {{ unifi_defaults_ports_cont }}
        published: {{ unifi_defaults_ports_host }}
        protocol: tcp
        mode: ingress
      - target: 8080
        published: 8080
        protocol: tcp
      - target: 3478
        published: 3478
        protocol: udp
        mode: ingress
      - target: 10001
        published: 10001
        protocol: udp
        mode: ingress
      - target: 8843
        published: 8843
        protocol: tcp
        mode: ingress
      - target: 8880
        published: 8880
        protocol: tcp
        mode: ingress
      - target: 6789
        published: 6789
        protocol: tcp
        mode: ingress
      - target: 5514
        published: 5514
        protocol: udp
        mode: ingress
    volumes:
      - type: bind
        source: {{ unifi_defaults_location }}
        target: /config
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.labels.ansible_host == pvr]

networks:
  {{ network_overlay }}:
    external: true

secrets:
  unifi_mongo_user:
    external: true

  unifi_mongo_pass:
    external: true

  unifi_mongo_root_pass:
    external: true